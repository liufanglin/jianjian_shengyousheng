<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/head_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/head_image"
                android:scaleType="fitXY" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/store_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:maxEms="12"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:textSize="12sp" />
                    <TextView
                        android:text="已认证"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:layout_width="50dp"
                        android:gravity="center"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button_sharp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/address"
                    android:textColor="@color/fontcolor_one"
                    android:textSize="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" />
            </LinearLayout>
        </LinearLayout>
        <!--收藏-->
        <ImageView
            android:id="@+id/foues"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@mipmap/comment_start_gray" />
    </RelativeLayout>

    <!--商家介绍，促销商品-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/line_color"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/business_introduce"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="商家介绍"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_regin_text" />
        <TextView
            android:id="@+id/business_sales"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="促销商品"
            android:textColor="@color/text_black"
            android:textSize="@dimen/login_regin_text" />
    </LinearLayout>

    <!--line-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line_color"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:id="@+id/introduce"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mianColor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <View
                android:id="@+id/cuxiao_goog"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mianColor"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <!--data-->
    <LinearLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="10dp"/>
</LinearLayout>