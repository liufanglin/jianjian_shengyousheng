        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="#F7F7F7"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/zhekou"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/zhekou3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bottom1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最多关注"
                        android:textSize="14sp"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/zhekou_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@mipmap/up3" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/jiage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/jiage3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bottom2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近价格"
                        android:textSize="14sp"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/jiage_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@mipmap/up3" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/riqi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/date3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bottom3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最快结束"
                        android:textSize="14sp"
                        android:textColor="@color/text_black" />

                    <ImageView
                        android:id="@+id/riqi_direction"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="3dp"
                        android:background="@mipmap/up3" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/line_color"/>

            <LinearLayout
                android:id="@+id/juli"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="@mipmap/juli3" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_bottom4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="最近距离"
                        android:textSize="14sp"
                        android:textColor="@color/text_black" />

                    <ImageView
