        <RelativeLayout
            android:id="@+id/rl_jifen"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="积分推送"
                android:textColor="@color/text_black"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/jifen_image"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/search_up3" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/jifen_push"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="分享积分"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
                <ImageView
                    android:id="@+id/share_pack"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/is_bag_pack_red" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="评论积分"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
                <ImageView
                    android:id="@+id/comment_pack"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/is_bag_pack_red" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="购买积分"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />

                <ImageView
                    android:id="@+id/buy_pack"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:background="@mipmap/is_bag_pack_red" />
            </RelativeLayout>
        </LinearLayout>

        <!--商家距离-->
        <RelativeLayout
            android:id="@+id/business_distance"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/line_color"
            android:paddingLeft="10dp"
            android:paddingRight="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="促销距离推送"
                android:textColor="@color/text_black"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/business_image"
                android:layout_width="15dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/search_up3" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/distance_item"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/buxian"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="不限"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />

                <ImageView
                    android:background="@mipmap/select"
                    android:id="@+id/buxian_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/wubai"
                android:layout_width="match_parent"
                android:layout_height="35dp">

                <TextView
                    android:text="0-500米"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />

                <ImageView
                    android:background="@mipmap/noselect"
                    android:id="@+id/wubai_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/yiqian"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="0-1000米"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
                <ImageView
                    android:background="@mipmap/noselect"
                    android:id="@+id/yiqian_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sanqian"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="0-3000米"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
                <ImageView
                    android:background="@mipmap/noselect"
                    android:id="@+id/sanqian_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/more"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:text="3000米以上"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
                <ImageView
                    android:background="@mipmap/noselect"
                    android:id="@+id/more_image"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="45dp" />
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:background="@mipmap/set_distance"
                    android:visibility="gone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="商家距离"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/login_regin_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="不限"
                    android:textSize="@dimen/login_regin_text" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
