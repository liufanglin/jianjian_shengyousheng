<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/line_color"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/is_bag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏的商品"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/no_bag"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="收藏的店铺"
                android:textColor="@color/text_black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/editor"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="编辑" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/line_color"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/introduce"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mianColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/cuxiao_goog"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/mianColor"
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/all_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/all_select_image"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/noselect" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="全选" />
        </LinearLayout>

        <ListView
            android:id="@+id/list1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>
        <ListView
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/ll_defaultdata"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@mipmap/pinglun_nocomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="很抱歉，还没有数据~"
                android:layout_marginTop="30dp"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/delect"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_sharp"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="@dimen/login_regin_text" />
</RelativeLayout>
